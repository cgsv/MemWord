<Window x:Class="MemWord.Query"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Query" Height="200" Width="300" ResizeMode="NoResize" Background="#00000000">
    <Grid>
    	<Grid.Background>
    		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
    			<GradientStop Color="#FF2C8A91" Offset="0"/>
    			<GradientStop Color="#FFA6BA63" Offset="1"/>
    			<GradientStop Color="#FF61A176" Offset="0.341"/>
    			<GradientStop Color="#4D3CA564" Offset="0.621"/>
    		</LinearGradientBrush>
    	</Grid.Background>
        <TextBox Height="23" Margin="72,41,72,0" Name="textBox1" VerticalAlignment="Top" KeyUp="textBox1_KeyUp" />
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="70,100,0,0" Name="buttonOK" VerticalAlignment="Top" Width="56" Click="buttonOK_Click" />
        <Button Content="Cancel" Height="23" Margin="0,100,70,0" Name="buttonCancel" VerticalAlignment="Top" HorizontalAlignment="Right" Width="56" Click="buttonCancel_Click" />
    </Grid>
</Window>
